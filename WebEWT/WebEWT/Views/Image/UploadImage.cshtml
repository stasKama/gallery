
@{
    ViewBag.Title = "Upload Image";
}

@section head
{
    <script src="~/scripts/upload-image.js"></script>
    <link href="~/Content/upload-images-page.css" rel="stylesheet" type="text/css" />
}

<h3>@ViewBag.Message</h3>

<h1 class="page-title">Upload Image page</h1>
@using (Html.BeginForm("AddImage", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <p>
        <label for="file">Select image</label> <input type="file" name="file" id="file" value="Select image" multiple accept="image/*"/><span>You did not select a image</span> 
    </p>
    <p>
        <label for="file-name">New name image</label><input type="text" name="fileName" id="fileName" placeholder="Enter new name for img"/>
    </p>
    <p>
        <input type="submit" id="submit" value="Send"/>
    </p>
    <p>
        <img id="preview" style="width:300px"/>
    </p>
}